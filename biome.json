{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"ignore": [
			"node_modules"
		],
		"rules": {
			"recommended": true
		}
	}
}